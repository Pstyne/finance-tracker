<h1>Friends</h1>

<div class="pt-5">
  <h3>Search Friends</h3>
  <%= form_tag search_friends_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9">
        <div class="input-group">
          <%= text_field_tag :q, params[:q], placeholder: "Search friends", autofocus: true, class: "form-control form-control-lg" %>
          <div class="input-group-append">
            <%= button_tag type: :submit, class: "btn btn-success" do %>
              <%= fa_icon "search 2x" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col-sm-9">
    <table class="table table-bordered table-hover table-dark">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Friends</th>
          <th scope="col">Stocks</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% current_user.friends.each do |friend| %>
          <tr>
            <th scope="row"><%= friend.full_name %></th>
            <td><%= friend.email %></td>
            <td>Has <%= pluralize(friend.friends.count, "friend") %></td>
            <td>Tracking <%= pluralize(friend.stocks.count, "stock") %></td>
            <td><%= link_to "Stop Following", "#", method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-warning" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>