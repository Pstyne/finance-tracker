<h2>User Details</h2>

<div class="card card-header d-inline-block">
  <table class="col-md-12">
    <tbody>
      <tr>
        <td><strong>Name: </strong><%= @user.full_name %></td>
        <td><strong>Email: </strong><%= @user.email %></td>
        <td>
          <% unless current_user.friends_with?(@user.id) %>
            <%= link_to "Follow", friendships_path(friend: @user), class: "btn btn-sm btn-success", method: :post %>
          <% else %>
            <%= link_to "Unfollow", friendship_path(@user), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: "Are you sure?" } %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>  
<% if @tracked_stocks.any? %>
  <%= render "stocks/list" %>
<% else %>
  <p class="lead"><%= @user.first_name %> is not tracking any stocks</p>
<% end %>