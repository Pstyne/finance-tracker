<% if @friends %>
  <div class="card card-header d-inline-block">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong><%= friend.full_name %></td>
            <td><strong>Email: </strong><%= friend.email %></td>
            <td>
              <%= link_to "View Profile", "#", class: "btn btn-sm btn-success" %>
              <%= link_to "Follow", "#", class: "btn btn-sm btn-success", method: :post %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>  
<% end %>