<% if @friends %>
  <div class="card card-header d-inline-block">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong><%= friend.full_name %></td>
            <td><strong>Email: </strong><%= friend.email %></td>
            <td>
              <%= link_to "View Profile", user_path(friend), class: "btn btn-sm btn-success" %>
              <% unless current_user.friends_with?(friend.id) %>
                <%= link_to "Follow", friendships_path(friend: friend), class: "btn btn-sm btn-success", method: :post %>
              <% else %>
                <%= link_to "Unfollow", friendship_path(friend), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: "Are you sure?" } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>  
<% end %>